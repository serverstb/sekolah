
{
  "entities": {
    "Subject": {
      "title": "Mata Pelajaran",
      "description": "Mewakili mata pelajaran yang diajarkan di sekolah.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk mata pelajaran."
        },
        "name": {
          "type": "string",
          "description": "Nama mata pelajaran."
        }
      },
      "required": ["id", "name"]
    },
    "Class": {
      "title": "Kelas",
      "description": "Mewakili sebuah kelas di sekolah.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk kelas."
        },
        "name": {
          "type": "string",
          "description": "Nama kelas, contoh: '10-A'."
        },
        "walikelasId": {
          "type": "string",
          "description": "ID anggota staf (guru) yang menjadi wali kelas."
        },
        "studentCount": {
          "type": "number",
          "description": "Jumlah siswa di dalam kelas."
        }
      },
      "required": ["id", "name", "walikelasId", "studentCount"]
    },
    "Staff": {
      "title": "Staf",
      "description": "Mewakili seorang guru atau karyawan di sekolah.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk staf."
        },
        "name": {
          "type": "string",
          "description": "Nama lengkap staf."
        },
        "role": {
          "type": "string",
          "enum": ["teacher", "employee"],
          "description": "Peran staf: guru atau karyawan."
        },
        "nip": {
          "type": "string",
          "description": "Nomor Induk Pegawai (NIP), hanya untuk guru."
        },
        "subjectId": {
          "type": "string",
          "description": "ID mata pelajaran yang diampu (hanya untuk guru)."
        },
        "jobTitle": {
            "type": "string",
            "description": "Jabatan atau posisi (hanya untuk karyawan)."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL foto profil staf."
        },
        "avatarHint": {
          "type": "string",
          "description": "Petunjuk kata kunci untuk gambar avatar."
        },
        "taughtClassIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Daftar ID kelas yang diajar (hanya untuk guru)."
        }
      },
      "required": ["id", "name", "role"]
    },
    "Student": {
      "title": "Siswa",
      "description": "Mewakili seorang siswa yang terdaftar di sekolah.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk siswa."
        },
        "name": {
          "type": "string",
          "description": "Nama lengkap siswa."
        },
        "classId": {
          "type": "string",
          "description": "ID kelas tempat siswa terdaftar."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL foto profil siswa."
        },
        "avatarHint": {
          "type": "string",
          "description": "Petunjuk kata kunci untuk gambar avatar."
        }
      },
      "required": ["id", "name", "classId"]
    },
    "NewStudentApplicant": {
      "title": "Pendaftar Siswa Baru",
      "description": "Mewakili calon siswa yang mendaftar.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk pendaftar."
        },
        "name": {
          "type": "string",
          "description": "Nama lengkap pendaftar."
        },
        "previousSchool": {
          "type": "string",
          "description": "Nama sekolah sebelumnya."
        },
        "registrationDate": {
          "type": "string",
          "format": "date-time",
          "description": "Tanggal pendaftaran."
        },
        "status": {
          "type": "string",
          "enum": ["Pending", "Accepted", "Rejected"],
          "description": "Status pendaftaran."
        },
        "parentName": {
          "type": "string",
          "description": "Nama orang tua atau wali."
        },
        "contact": {
          "type": "string",
          "description": "Nomor kontak orang tua atau wali."
        },
        "birthPlace": {
          "type": "string",
          "description": "Tempat lahir pendaftar."
        },
        "birthDate": {
          "type": "string",
          "format": "date",
          "description": "Tanggal lahir pendaftar."
        },
        "gender": {
          "type": "string",
          "enum": ["Laki-laki", "Perempuan"],
          "description": "Jenis kelamin pendaftar."
        },
        "address": {
          "type": "string",
          "description": "Alamat lengkap pendaftar."
        },
        "academicYear": {
          "type": "string",
          "description": "Tahun ajaran pendaftaran, format: 'YYYY/YYYY'."
        }
      },
      "required": ["id", "name", "previousSchool", "registrationDate", "status", "parentName", "contact", "birthPlace", "birthDate", "gender", "address", "academicYear"]
    },
    "AttendanceRecord": {
      "title": "Catatan Absensi",
      "description": "Mencatat kehadiran (siswa, staf) pada waktu tertentu.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk catatan absensi."
        },
        "studentId": {
          "type": "string",
          "description": "ID siswa (jika absensi siswa)."
        },
        "staffId": {
          "type": "string",
          "description": "ID staf (jika absensi staf)."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Waktu absensi dicatat."
        },
        "status": {
          "type": "string",
          "enum": ["Present", "Late", "Absent"],
          "description": "Status kehadiran."
        }
      },
      "required": ["id", "timestamp", "status"]
    },
    "TeachingJournal": {
      "title": "Jurnal Mengajar",
      "description": "Catatan aktivitas mengajar harian seorang guru.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk entri jurnal."
        },
        "teacherId": {
          "type": "string",
          "description": "ID guru (staf) yang membuat jurnal."
        },
        "classId": {
          "type": "string",
          "description": "ID kelas tempat mengajar."
        },
        "subjectId": {
          "type": "string",
          "description": "ID mata pelajaran yang diajarkan."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "Tanggal sesi mengajar."
        },
        "topic": {
          "type": "string",
          "description": "Topik spesifik yang dibahas."
        },
        "notes": {
          "type": "string",
          "description": "Catatan tambahan mengenai sesi kelas."
        },
        "materialFile": {
          "type": "string",
          "description": "Nama file materi yang diunggah (opsional)."
        }
      },
      "required": ["id", "teacherId", "classId", "subjectId", "date", "topic"]
    },
    "Schedule": {
      "title": "Jadwal Pelajaran",
      "description": "Satu entri jadwal pelajaran untuk sebuah kelas.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID unik untuk entri jadwal."
        },
        "classId": {
          "type": "string",
          "description": "ID kelas."
        },
        "subjectId": {
          "type": "string",
          "description": "ID mata pelajaran."
        },
        "teacherId": {
          "type": "string",
          "description": "ID guru (staf) yang mengajar."
        },
        "day": {
          "type": "string",
          "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "description": "Hari dalam seminggu."
        },
        "startTime": {
          "type": "string",
          "format": "time",
          "description": "Waktu mulai pelajaran (HH:mm)."
        },
        "endTime": {
          "type": "string",
          "format": "time",
          "description": "Waktu selesai pelajaran (HH:mm)."
        }
      },
      "required": ["id", "classId", "subjectId", "teacherId", "day", "startTime", "endTime"]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com"]
  },
  "firestore": {
    "/subjects/{subjectId}": {
      "schema": { "$ref": "#/entities/Subject" },
      "description": "Koleksi semua mata pelajaran."
    },
    "/classes/{classId}": {
      "schema": { "$ref": "#/entities/Class" },
      "description": "Koleksi semua kelas."
    },
    "/staff/{staffId}": {
      "schema": { "$ref": "#/entities/Staff" },
      "description": "Koleksi semua staf (guru dan karyawan)."
    },
    "/students/{studentId}": {
      "schema": { "$ref": "#/entities/Student" },
      "description": "Koleksi semua siswa."
    },
    "/newStudentApplicants/{applicantId}": {
      "schema": { "$ref": "#/entities/NewStudentApplicant" },
      "description": "Koleksi pendaftar siswa baru."
    },
    "/schedules/{scheduleId}": {
      "schema": { "$ref": "#/entities/Schedule" },
      "description": "Koleksi semua jadwal pelajaran."
    },
    "/teachingJournals/{journalId}": {
      "schema": { "$ref": "#/entities/TeachingJournal" },
      "description": "Koleksi semua entri jurnal mengajar."
    },
    "/attendanceRecords/{recordId}": {
      "schema": { "$ref": "#/entities/AttendanceRecord" },
      "description": "Koleksi semua catatan absensi gabungan."
    }
  }
}
